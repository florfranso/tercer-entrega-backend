<div class="container my-5">
    <div class="jumbotron">

        <h1>REGISTER</h1>
        <br>
        <form class="form" action="/api/auth/register" method="post" role="form" autocomplete="off">
            <label>Nombre:</label>
            <div class="form-group">
                <input id="name" name='name' placeholder="nombre" class="form-control" type="text" required>
            </div>
            <label>Email:</label>
            <div class="form-group">
                <input id="email" name='email' placeholder="email" class="form-control" type="text" required>
            </div>
            <label>Direcci√≥n:</label>
            <div class="form-group">
                <input id="direccion" name='direccion' placeholder="direccion" class="form-control" type="text" required>
            </div>
            <label>Edad:</label>
            <div class="form-group">
                <input id="edad" name='edad' placeholder="edad" class="form-control" type="text" required>
            </div>
            <label>Celular:</label>
            <div class="form-group">
                <input id="celular" name='celular' placeholder="celular" class="form-control" type="text" required>
            </div>
             <label>Avatar:</label>
            <div class="form-group">
                <input id="avatar" name='avatar' placeholder="avatar" class="form-control" type="text"
                    required>
            </div>
            <label>Password:</label>
            <div class="form-group">
                <input id="password" name='password' placeholder="password" class="form-control" type="password"
                    required>
            </div>

            <div class="form-group">
                <input class="btn btn-success my-3" type="submit" value="Register">
            </div>
        </form>

        <hr>
        <div class="text-left">
            <button class="btn btn-success my-3" onclick="location.href = '/login'">Ir a Login</button>
        </div>

    </div>
</div>